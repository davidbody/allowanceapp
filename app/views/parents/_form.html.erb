<div class="container">
  <%= simple_form_for @parent do |f| %>
      <div class="container">
        <%= f.input :parent_name, input_html: { class: 'form-control' } %>
        <%= f.input :family_name, input_html: { class: 'form-control' } %>
        <%= f.input :image, input_html: { class: 'form-control'} %>     

    <h3>Kids
      <div id="kids">
        <%= f.simple_fields_for :kids do |kid| %>

        <%= render 'kid_fields', :f => kid %>
        <% end %>
        <div class="links">
          <%= link_to_add_association 'add kid', f, :kids %>
        </div>
      </div>
    </h3>
     <%= f.button :submit, class: "btn btn-primary" %>
      </div>
  <% end %>
</div>
