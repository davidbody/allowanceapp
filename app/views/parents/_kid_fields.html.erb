<div class="nested-fields">
  <div clas="form-inline">
    <%= f.input :kid_name %>
    <%= f.input :kid_age %>
    <%= f.input :kid_gender %>

    <%= f.hidden_field :_destroy %>
    <%= link_to "remove", "#", class: "remove_fields" %>

  <div class="allow">
    <%= f.simple_fields_for :allows do |builder| %>
    <%= render 'allow_fields', :f => builder %>
    <% end %>
    <div class="links">
      <%= link_to_add_fields 'add allowance', f, :allows %>
    </div>
  </div>
</div>


